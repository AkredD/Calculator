<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/ExpressionR"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal" />
    
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">

        <Button
            android:id="@+id/b1"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:onClick="onDigitClick"
            android:textSize="24sp"
            android:layout_height="match_parent"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            style="?android:attr/buttonStyleSmall"
            android:onClick="onDigitClick"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_height="match_parent"
            android:text="2" />

        <Button
            android:id="@+id/b3"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:onClick="onDigitClick"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/mul"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:onClick="onClearClick"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="CC" />

        <Button
            android:id="@+id/b33"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:onClick="onFullClearClick"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="C"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">

        <Button
            android:id="@+id/b4"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onDigitClick"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/b5"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onDigitClick"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/b6"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onDigitClick"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:id="@+id/br"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onBracketClick"
            android:layout_weight="1"
            android:text="()" />

        <Button
            android:id="@+id/b34"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:onClick="onOpClick"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="/" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">

        <Button
            android:id="@+id/b7"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onDigitClick"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/b8"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:onClick="onDigitClick"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/b9"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onDigitClick"
            android:layout_weight="1"
            android:text="9" />

        <Button
            android:id="@+id/add"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onOpClick"
            android:layout_weight="1"
            android:text="+" />

        <Button
            android:id="@+id/b36"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:onClick="onOpClick"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="*" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">

        <Button
            android:id="@+id/b0"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:onClick="onDigitClick"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/dot"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onDigitClick"
            android:layout_weight="1"
            android:text="." />

        <Button
            android:id="@+id/exp"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onOpClick"
            android:layout_weight="1"
            android:text="^" />

        <Button
            android:id="@+id/sub"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:onClick="onOpClick"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="-" />

        <Button
            android:id="@+id/eqv"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:onClick="onEqvClick"
            android:layout_weight="1"
            android:text="=" />

    </TableRow>
</LinearLayout>